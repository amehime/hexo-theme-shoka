.highlight:hover .copy-btn, .highlight .copy-btn:focus {
  opacity: 1;
}

.copy-btn {
  color: var(--grey-7);
  cursor: pointer;
  line-height: 1.6;
  opacity: 0;
  padding: 2px 6px;
  position: absolute;
  the-transition();

  background: var(--grey-1);
  border: 0;
  font-size: $font-size-smaller;
  right: 0;
  top: 0;
}


