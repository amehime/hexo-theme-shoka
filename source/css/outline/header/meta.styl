.brand {
  display: block;
  position: relative;
  //z-index: 0;
  width: 100%;
  height: 100%;
  padding-top: 250px;

  .meta {
    position: fixed;
    width: 556px;
    top: 100px;
    left: calc(50% - 278px);
    text-align: $site-meta-text-align;

    +mobile() {
      text-align: center;
    }

    &.affix {
      z-index: $zindex-0;
    }

    .logo {
      border-bottom: none;
      display: inline-block;
      line-height: $font-size-title;
      position: relative;
    }

    .title {
      font-weight: bold;
      font-family: $font-family-title;
      font-size: $font-size-title;
      margin: 0;
    }

    .subtitle {
      font-size: $font-size-subtitle;
      margin: 0;
    }

    .artboard {
      font-family: $font-family-logo;
      font-size: $font-size-logo;
    }
  }


  .waves {
    width: 100%;
    height: 15vh;
    margin-bottom: -13px;
    min-height: 100px;
    max-height: 150px;
  }
}

/* Animation */
.parallax>use {
  animation: wave 25s cubic-bezier(.55, .5, .45, .5) infinite;
}

.parallax>use:nth-child(1) {
  animation-delay: -2s;
  animation-duration: 7s;
  fill: var(--grey-1-a7);
}

.parallax>use:nth-child(2) {
  animation-delay: -3s;
  animation-duration: 10s;
  fill: var(--grey-1-a5);
}

.parallax>use:nth-child(3) {
  animation-delay: -4s;
  animation-duration: 13s;
  fill: var(--grey-1-a3);
}

.parallax>use:nth-child(4) {
  animation-delay: -5s;
  animation-duration: 20s;
  fill: var(--grey-1);
}

@keyframes wave {
  0% {
    transform: translate3d(-90px, 0, 0);
  }

  100% {
    transform: translate3d(85px, 0, 0);
  }
}
