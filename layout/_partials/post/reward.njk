{%- if page.reward !== false %}
<div class="reward">
  <button><i class="ic i-heartbeat"></i> {{ __('reward.donate') }}</button>
  <p>{{ __('reward.text') }}</p>
  <div id="qr">
    {%- for name, image in theme.reward.account %}
      {%- set builtin = ['wechatpay', 'alipay', 'paypal', 'bitcoin'] %}
      {%- if builtin.includes(name) %}
        {%- set translation = __('reward.' + name) %}
      {% else %}
        {%- set translation = name %}
      {%- endif %}
      <div>
        <img data-src="{{ url_for(theme.statics + theme.images + image) }}" alt="{{ author }} {{ translation }}">
        <p>{{ translation }}</p>
      </div>
    {%- endfor %}
  </div>
</div>
{%- endif %}
